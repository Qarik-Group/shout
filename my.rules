; vim:ft=lisp:et
((for *
      (when *
        (slack :webhook "http://example.com/..."
               :text "$topic is $status"
               :color (if ok? "good" "danger")
               :attach (concat
                         (if link
                             "$message <$link>"
                             "$message")
                         "build-id: $[build-id] ($[date])")))))
